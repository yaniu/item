<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/z_x_pic"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/z_x_fan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/common_left_arrow"/>

            <TextView
                android:textColor="#000"

                android:layout_marginLeft="20dp"
                android:layout_width="150dp"

                android:layout_height="wrap_content"
                android:text="专辑详情"
                android:textSize="18dp"
                android:id="@+id/n_text"/>
            <ImageView
                android:layout_marginLeft="150dp"
                android:id="@+id/z_x_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_pressed"/>

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:textColor="#000"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:text="阿娇睡觉撒是撒 "
            android:id="@+id/z_x_text1"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:id="@+id/z_x_text2"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/z_x_text1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:text="阿娇睡觉撒是撒 "

            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="专辑简介"
            android:layout_marginLeft="30dp"/>
        <LinearLayout
            android:layout_marginLeft="150dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/select_xin"
                android:id="@+id/z_x_xin"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="15dp"
                android:id="@+id/z_x_num"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人订阅"
                android:textSize="15dp"
               />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dadad9"></View>
<TextView
    android:layout_marginTop="10dp"
    android:layout_marginLeft="35.5dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18dp"
    android:text="撒旦撒旦撒旦撒地方豆腐干大概豆腐干"
    android:id="@+id/z_x_text3"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35.5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="撒旦撒旦撒旦撒地方豆腐干大概豆腐干"
        android:id="@+id/z_x_text4"/>
    <TextView
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:text="专辑课程"
        android:layout_marginLeft="30dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dadad9"></View>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/z_x_rec"></android.support.v7.widget.RecyclerView>

</com.zhy.autolayout.AutoLinearLayout>

</android.support.v4.widget.NestedScrollView>