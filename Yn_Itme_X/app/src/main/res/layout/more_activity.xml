<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <LinearLayout

    android:background="#ff0"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <LinearLayout

                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <ImageView
                    android:id="@+id/k_x_pic2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/course_custom"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/k_x_pic3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/course_download"
                    android:layout_weight="1"


                    />

                <ImageView
                    android:id="@+id/k_x_pic4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/course_collection"

                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/k_x_text9"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@mipmap/course_post_test"

            android:layout_marginTop="20dp"

            />

    </LinearLayout>
</LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/more_scro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="113dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <RelativeLayout
                android:id="@+id/linear_more"
                android:background="@mipmap/course_course_frequency"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                >
                <com.zhy.autolayout.AutoLinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/k_x_fan"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/common_left_arrow"/>

                    <TextView
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="150dp"

                        android:layout_height="wrap_content"
                        android:text="专辑详情"
                        android:textSize="18dp"
                        android:id="@+id/k_x_text1"/>
                    <ImageView
                        android:layout_marginLeft="130dp"
                        android:id="@+id/k_x_fen"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/share_pressed"/>

                </com.zhy.autolayout.AutoLinearLayout>
                <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/k_x_jc"
                    android:layout_marginTop="35dp"
                    ></fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/k_x_jc"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/k_x_name"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="受到非法所得"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:id="@+id/k_x_mai"
                        android:background="@drawable/return_course_btn"

                        android:text="立即购买"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:id="@+id/k_x_pic1"
                    android:src="@mipmap/course_teachers"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="5dp"
                    />

                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="于春华老师"

                            android:id="@+id/k_x_text2"
                            android:layout_marginTop="30dp"
                            android:textSize="16.3sp"
                            android:textColor="#232323"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="于春华老师"
                            android:layout_alignParentTop="true"


                            android:id="@+id/k_x_text3"
                            android:layout_marginTop="20dp"
                            android:textColor="#898989"
                            android:textSize="13.3sp"


                            />
                    </LinearLayout>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                     android:id="@+id/k_x_text4"
                    android:background="@drawable/return_course_btn"
                    android:layout_marginTop="50dp"
                    android:text="听老师介绍"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#c9c9c6"
                ></View>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="连锁门店课程课程"

                        android:id="@+id/k_x_text5"
                        android:layout_marginTop="30dp"
                        android:textSize="16.3sp"
                        android:textColor="#232323"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="知名美业顾问免费教你开连锁店"
                        android:layout_alignParentTop="true"


                        android:id="@+id/k_x_text6"
                        android:layout_marginTop="20dp"
                        android:textColor="#898989"
                        android:textSize="13.3sp"


                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/k_x_text7"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售10000"
                    android:textColor="#ff0"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#c9c9c6"
                ></View>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"

                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程简介"

                    android:layout_marginTop="30dp"
                    android:textSize="16.3sp"
                    android:textColor="#232323"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="于春华老师
                    于春华老师
                    于春华老师
                    于春华老师"
                    android:layout_alignParentTop="true"


                    android:id="@+id/k_x_text8"
                    android:layout_marginTop="20dp"
                    android:textColor="#898989"
                    android:textSize="13.3sp"


                    />
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#c9c9c6"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学员评价"

                android:id="@+id/name_more3"
                android:layout_marginTop="30dp"
                android:textSize="16.3sp"
                android:textColor="#232323"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/more_rec"
                ></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>