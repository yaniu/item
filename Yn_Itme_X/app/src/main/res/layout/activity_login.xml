<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/log_fan"
               android:padding="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/common_left_arrow"/>
           <TextView

               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:gravity="center"
               android:text="登录界面"
               android:textSize="22sp"


               ></TextView>
       </LinearLayout>

        <ImageView
            android:layout_width="136.7dp"
            android:layout_height="136.7dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="手机号码"
                android:textColor="#121212"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/log_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:background="@null"
                android:hint="+86"
                android:inputType="phone"
                android:maxLines="1"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#898989"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="密码"
                android:textColor="#121212"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/log_paw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="60dp"
                android:background="@null"
                android:hint="密码不少于6个字"
                android:inputType="phone"
                android:maxLines="1"/>

            <ImageView
                android:id="@+id/log_yan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/login_nopassword"
                />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#898989"></View>

        <TextView
            android:id="@+id/log_wang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6.7dp"
            android:text="忘记密码"
            android:textSize="16dp"
            />

        <Button
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginshape"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13.3dp"
            android:background="@drawable/registshape"
            android:text="手机快速注册"
            android:textColor="#ffd300"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/log_she"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:text="用社交账号登录"
            android:textColor="#b3b3b3"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="46.7dp"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:id="@+id/log_weixin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/log_wei"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/login_wechat"/>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/log_wei"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="9dp"
                    android:text="微信登录"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/log_qq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="34.7dp"
                    android:layout_height="34.7dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="120dp"
                    android:src="@mipmap/login_qq"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv2"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="6.7dp"
                    android:text="QQ登录"
                    android:textSize="16dp"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>