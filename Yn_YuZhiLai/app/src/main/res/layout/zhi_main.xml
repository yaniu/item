<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/inl_main"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#c4c4ba"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额"
            android:textSize="@dimen/x30"
            android:layout_marginTop="@dimen/y25"

            />
        <TextView
            android:id="@+id/z_price"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 6.00"
            android:textSize="@dimen/x50"
            android:layout_marginTop="@dimen/y25"
            android:textColor="#ff00"
            />
    </LinearLayout>
    <RelativeLayout
        android:background="#babab3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y95">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y25"
            android:textSize="@dimen/x25"
            android:layout_marginLeft="@dimen/x30"
            android:text="选择支付方式"
            />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/y95"
    android:orientation="horizontal">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/y30"
        android:src="@mipmap/balance_appstore"
        android:layout_marginLeft="@dimen/x30"

        />
    <TextView
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="苹果支付商店"
        android:textColor="#000"
        android:textSize="@dimen/x30"/>
    <CheckBox
        android:id="@+id/z_ping"
        android:button="@null"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/x20"
        android:layout_height="wrap_content"
        android:background="@drawable/yuan_shop"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="#babab3"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y95"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/balance_remainder"
            android:layout_marginLeft="@dimen/x30"

            />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1"
           android:layout_gravity="center"
           android:layout_marginLeft="@dimen/x20"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="余额支付"
               android:textColor="#000"
               android:textSize="@dimen/x30"/>
           <TextView
               android:id="@+id/z_yu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="余额支付 ：￥0.0"
               android:textColor="#000"
               android:textSize="@dimen/x20"/>
       </LinearLayout>
        <CheckBox
            android:id="@+id/z_yus"
            android:button="@null"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:layout_height="wrap_content"
            android:background="@drawable/yuan_shop"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#babab3"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y95"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月额不足"
            android:textColor="#000"
            android:textSize="@dimen/x30"/>
        <TextView
            android:id="@+id/z_chong"
            android:text="充值"
            android:textSize="@dimen/x30"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:layout_height="wrap_content"
           android:textColor="#fff"
            android:background="@drawable/return_course_btn"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="#babab3"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y95"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/balance_wechat"
            android:layout_marginLeft="@dimen/x30"

            />
        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textColor="#000"
            android:textSize="@dimen/x30"/>
        <CheckBox
            android:id="@+id/z_wei"
            android:button="@null"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:layout_height="wrap_content"
            android:background="@drawable/yuan_shop"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="#babab3"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y95"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/balance_alipay"
            android:layout_marginLeft="@dimen/x30"

            />
        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝支付"
            android:textColor="#000"
            android:textSize="@dimen/x30"/>
        <CheckBox
            android:id="@+id/z_zhi"
            android:button="@null"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:layout_height="wrap_content"
            android:background="@drawable/yuan_shop"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="#babab3"></View>
    <TextView
        android:id="@+id/z_yes"
        android:gravity="center"
        android:text="确认支付"
        android:textSize="@dimen/x30"
        android:layout_marginTop="@dimen/y75"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
         android:background="@drawable/return_course_btn"
        android:textColor="#fff"
        />
</LinearLayout>