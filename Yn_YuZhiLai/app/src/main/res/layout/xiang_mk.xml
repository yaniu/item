<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout

        android:background="@mipmap/course_course_frequency"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y450"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y450"
            android:id="@+id/j_x_pic"/>
        <LinearLayout
            android:layout_marginTop="@dimen/y5"
            android:id="@+id/k_x_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/j_x_fan"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/y20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/common_left_arrow"/>
            <TextView
                android:id="@+id/j_x_name"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/y30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/x25"
                android:text="专辑精选"/>
            <ImageView
                android:id="@+id/j_x_fen"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/y30"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_pressed"/>
        </LinearLayout>
        <TextView
            android:textColor="#000"
            android:layout_marginLeft="@dimen/y30"
            android:layout_marginTop="@dimen/y350"
            android:layout_width="wrap_content"
            android:textSize="@dimen/x30"
            android:text="阿娇睡觉撒是撒 "
            android:id="@+id/j_x_text1"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:id="@+id/j_x_text2"
            android:layout_marginLeft="@dimen/y30"

            android:layout_below="@id/j_x_text1"
            android:layout_marginTop="@dimen/y20"
            android:layout_width="wrap_content"
            android:textSize="@dimen/x30"
            android:text="阿娇睡觉撒是撒 "
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/y30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精选专辑"
            android:layout_weight="1"
            android:textSize="@dimen/x30"
            android:textColor="#000"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_marginRight="@dimen/y30"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="@dimen/y10"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y30"
                android:src="@drawable/select_xin"
                android:id="@+id/j_x_xin"
                />
            <TextView
                android:layout_marginTop="@dimen/y5"
                android:layout_marginLeft="@dimen/y10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="@dimen/x25"
                android:id="@+id/j_x_num"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#c7c7be"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/y20"

            android:id="@+id/j_x_text3"
            android:text="法际发生了开发建设的路口附近受到了开发设计"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x25"
            android:layout_marginLeft="@dimen/x35"/>
        <TextView
            android:id="@+id/j_x_text4"
            android:text="法际发生了开发建设的路口附近受到了开发设计"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x25"
            android:layout_marginLeft="@dimen/x35"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="#c7c7be"></View>
    <TextView
        android:layout_marginLeft="@dimen/y30"
        android:layout_marginTop="@dimen/y30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:text="专辑课程"
        android:textSize="@dimen/x20"
        android:textColor="#000"
        android:layout_gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#c7c7be"></View>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/j_x_rec"></android.support.v7.widget.RecyclerView>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>