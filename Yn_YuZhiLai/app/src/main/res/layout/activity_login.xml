<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <include
           layout="@layout/inl_main"></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="#b6b6b1"></View>

        <ImageView
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y200"
            android:layout_gravity="center"
            android:src="@mipmap/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="手机号码"
                android:textColor="#121212"
                android:textSize="@dimen/x33" />

            <EditText
                android:id="@+id/log_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/x20"
                android:layout_weight="3"
                android:background="@null"
                android:hint="+86"
                android:inputType="phone"
                android:maxLines="1" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:background="#898989"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="密码"
                android:textColor="#121212"
                android:textSize="@dimen/x33"
               />

            <EditText
                android:layout_weight="1"
                android:singleLine="true"
                android:id="@+id/log_paw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/x60"
                android:background="@null"
                android:hint="密码不少于6个字"
                android:inputType="phone"

                android:maxLines="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x30"
                android:src="@mipmap/login_nopassword" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:background="#898989"></View>

        <TextView
            android:id="@+id/log_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:text="忘记密码"
            android:textSize="@dimen/x30"/>

        <Button
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/loginshape"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/log_phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/registshape"
            android:text="手机快速注册"
            android:textColor="#ffd300"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y50"
            android:text="用社交账号登录"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/x30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x140"
            android:layout_marginTop="@dimen/y80"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/log_wei"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
               >

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y60"
                    android:layout_gravity="center"

                    android:src="@mipmap/login_wechat" />

                <TextView
                   android:layout_gravity="center"
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_marginTop="@dimen/y10"
                    android:text="微信登录"
                    android:textSize="@dimen/x30" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/log_qq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
              >

                <ImageView

                    android:id="@+id/iv2"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y60"
                   android:layout_gravity="center"
                    android:src="@mipmap/login_qq" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/y10"
                    android:text="QQ登录"
                    android:textSize="@dimen/x30" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>