<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/inl_main"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#c4c4ba"></View>
    <LinearLayout
        android:layout_marginTop="@dimen/y30"
        android:id="@+id/xiu_pic"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="@dimen/y153">
        <ImageView
            android:id="@+id/xiu_tou"
            android:layout_gravity="center"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y150"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/x50"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_weight="1"
            android:textSize="@dimen/x45"
            android:layout_marginLeft="@dimen/x25"/>
        <ImageView
            android:id="@+id/xiu_pic1"
            android:layout_gravity="center"
            android:src="@mipmap/common_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x33"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="#e9e9e4"></View>
    <LinearLayout
        android:layout_marginTop="@dimen/y30"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="@dimen/y153">

        <TextView

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称 :"

            android:textSize="@dimen/x45"
            android:layout_marginLeft="@dimen/x45"/>
        <EditText
            android:background="@null"
            android:id="@+id/xiu_name"
            android:layout_weight="1"
           android:hint="填写用户名或者账户"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x33"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#c4c4ba"></View>
    <LinearLayout
        android:layout_marginTop="@dimen/y30"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="@dimen/y153">

        <TextView

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号 :"

            android:textSize="@dimen/x45"
            android:layout_marginLeft="@dimen/x45"/>
        <EditText
            android:background="@null"
            android:id="@+id/xiu_phone"
            android:layout_weight="1"
            android:hint="填写手机号"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x33"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#c4c4ba"></View>
    <LinearLayout
        android:layout_marginTop="@dimen/y30"
        android:id="@+id/xiu_weixin"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="@dimen/y153">

        <TextView

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信绑定 :"

            android:textSize="@dimen/x45"
            android:layout_marginLeft="@dimen/x45"/>
        <TextView

            android:layout_weight="1"
            android:hint="去绑定"
            android:layout_gravity="center"
            android:textSize="@dimen/x33"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x33"/>
        <ImageView

            android:layout_gravity="center"
            android:src="@mipmap/common_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x33"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#c4c4ba"></View>
    <ImageView
        android:id="@+id/xiu_button"
        android:layout_marginTop="@dimen/y50"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="@dimen/y55"
        android:src="@mipmap/mine_ensure"
        />
</LinearLayout>