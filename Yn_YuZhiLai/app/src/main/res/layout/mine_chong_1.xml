<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/inl_main">

</include>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="#b6b6b1"></View>
     <RelativeLayout
       android:background="#babab3"
       android:layout_width="match_parent"
       android:layout_height="@dimen/y95">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="@dimen/y25"
           android:textSize="@dimen/x25"
           android:layout_marginLeft="@dimen/x30"
           android:text="选择充值方式"
           />
   </RelativeLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/y95"
       android:orientation="horizontal">
       <ImageView
           android:layout_gravity="center"
           android:layout_width="@dimen/x30"
           android:layout_height="@dimen/y30"
           android:src="@mipmap/balance_appstore"
           android:layout_marginLeft="@dimen/x30"

           />
       <TextView
           android:layout_weight="1"
           android:layout_gravity="center"
           android:layout_marginLeft="@dimen/x20"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="苹果支付商店"
           android:textColor="#000"
           android:textSize="@dimen/x30"/>
       <ImageView
           android:id="@+id/c_ping"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_marginRight="@dimen/x20"
           android:layout_height="wrap_content"
           android:background="@drawable/yuan_shop"/>
   </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/y10"
       android:background="#babab3"></View>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/y95"
       android:orientation="horizontal">
       <ImageView
           android:layout_gravity="center"
           android:layout_width="@dimen/x30"
           android:layout_height="@dimen/y30"
           android:src="@mipmap/balance_wechat"
           android:layout_marginLeft="@dimen/x30"

           />
       <TextView
           android:layout_weight="1"
           android:layout_gravity="center"
           android:layout_marginLeft="@dimen/x20"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="微信支付"
           android:textColor="#000"
           android:textSize="@dimen/x30"/>
       <ImageView
           android:id="@+id/c_wei"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_marginRight="@dimen/x20"
           android:layout_height="wrap_content"
           android:background="@drawable/yuan_shop"/>
   </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/y10"
       android:background="#babab3"></View>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/y95"
       android:orientation="horizontal">
       <ImageView
           android:layout_gravity="center"
           android:layout_width="@dimen/x30"
           android:layout_height="@dimen/y30"
           android:src="@mipmap/balance_alipay"
           android:layout_marginLeft="@dimen/x30"

           />
       <TextView
           android:layout_weight="1"
           android:layout_gravity="center"
           android:layout_marginLeft="@dimen/x20"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="支付宝支付"
           android:textColor="#000"
           android:textSize="@dimen/x30"/>
       <ImageView
           android:id="@+id/c_zhi"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_marginRight="@dimen/x20"
           android:layout_height="wrap_content"
           android:background="@drawable/yuan_shop"/>
   </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/y10"
       android:background="#babab3"></View>
    <TextView
        android:id="@+id/c_yes"
        android:gravity="center"
        android:text="确认充值"
        android:textSize="@dimen/x30"
        android:layout_marginTop="@dimen/y175"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:background="@drawable/return_course_btn"
        android:textColor="#fff"
        />
</LinearLayout>
